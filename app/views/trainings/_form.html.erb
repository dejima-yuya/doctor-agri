<%= form_with(model: training, html: { class: 'needs-validation', novalidate: true }) do |form| %>
  <% if training.errors.any? %>
    <div id="error_explanation" class="alert alert-danger" role="alert">
      <h2>入力内容に誤りがあるため送信することが出来ませんでした。</h2>
      <ul>
        <% training.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group col-md-15">
    <%= form.label :title, class: 'form-label' %>
    <%= form.text_field :title, class: 'form-control', size: "40" %>
  </div>

  <div class="form-group col-md-7">
    <%= form.label :category, class: 'form-label' %>
    <%= form.collection_select :category_id, @categories, :id, :title, { include_blank: true }, { class: 'form-control' } %>
  </div>

  <div class="form-group col-md-7">
    <%= form.label :crop, class: 'form-label' %>
    <%= form.collection_select :crop_id, @crops, :id, :title, { include_blank: true }, { class: 'form-control' } %>
  </div>

  <div class="form-group">
    <%= form.label :content, class: 'form-label' %>
    <%= form.text_area :content, class: 'form-control', size: "65x5" %>
  </div>

  <div class="actions text-center mt-3">
    <%= form.submit "送信する", class: 'btn btn-primary' %>
  </div>
<% end %>
