<table class="table table-striped user-info" style="max-width: 40%; margin: 0 auto;">
  <thead>
    <tr>
      <th>プロフィール</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td><strong>名前</strong><br><br><%= @user.name %></td>
    </tr>
    <tr>
      <td><strong>電話番号</strong><br><br><%= @user.phone_number %></td>
    </tr>
    <tr>
      <td><strong>メールアドレス</strong><br><br><%= @user.email %></td>
    </tr>
    <tr>
      <td><strong>管理者権限</strong><br><br><%= @user.admin ? "あり" : "なし" %></td>
    </tr>
  </tbody>
</table>

<div class="form-row justify-content-center mt-4">
  <%= link_to 'プロフィールを編集する', edit_user_path(@user), class: 'btn btn-outline-secondary custom-link' %>
  <%= link_to 'チャットボット画面', new_survey_path, class: 'btn btn-outline-secondary custom-link' %>
</div>
